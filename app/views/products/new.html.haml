.outer

  = render "product-header"

  .sell-main
    %section.sell-main__container
      .sell-container
        %h1.sell-container__head 商品の情報を入力
        = form_with model: @product, html: {class: 'sell-form'} do |f|
          .sell-upload
            %h3.sell-upload__head
              出品画像
              %span.form-require 必須
            %p.sell-upload__option 最大10枚までアップロードできます
            .sell-upload__dropbox.have-item-0
              = f.fields_for :images do |i|
                = i.file_field :image, multiple: true, class: "file"
                %pre
                  ドラッグアンドドロップ
                  またはクリックしてファイルをアップロード


          .sell-content
            .sell-content__info
              .form-group
                %label.sell-content__label
                  商品名
                  %span.form-require 必須
                = f.text_field :name, class: 'sell-content__info--name-form', placeholder: "商品名（必須40文字まで）"
              .form-group
                %label.sell-content__label
                  商品の説明
                  %span.form-require 必須
                = f.text_area :detail, class: 'sell-content__info--detail-form', placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"

          .sell-content.clearfix
            %h3.sell-sub-head 商品の詳細
            .sell-content__detail
              .form-group
                %label.sell-content__label
                  カテゴリー
                  %span.form-require 必須
                .select-wrap
                  = f.select :category_id, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon
                .select-wrap
                  = f.select :category_id, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon
                .select-wrap
                  = f.select :category_id, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon

              .form-group
                %label.sell-content__label
                  サイズ
                  %span.form-require 必須
                .select-wrap
                  = f.select :size_id, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon

              .form-group
                %label.sell-content__label
                  ブランド
                  %span.form-optional 任意
                .select-wrap
                  = f.select :brand_id, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon

              .form-group
                %label.sell-content__label
                  商品の状態
                  %span.form-require 必須
                .select-wrap
                  = f.select :condition, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon

          .sell-content.clearfix
            %h3.sell-sub-head
              配送について
              = link_to "#", class: "question-icon" do
                ?
            .sell-content__detail
              .form-group
                %label.sell-content__label
                  送料の負担
                  %span.form-require 必須
                .select-wrap
                  = f.select :postage, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon
              .form-group
                %label.sell-content__label
                  配送の方法
                  %span.form-require 必須
                .select-wrap
                  = f.select :shipping_method, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon
              .form-group
                %label.sell-content__label
                  発送元の地域
                  %span.form-require 必須
                .select-wrap
                  = f.select :region, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon
              .form-group
                %label.sell-content__label
                  発送前の日数
                  %span.form-require 必須
                .select-wrap
                  = f.select :date, {}, {prompt: "---"}, {class: 'select-default'}
                  %i.fas.fa-angle-down.select-icon

          .sell-content.clearfix
            %h3.sell-sub-head
              販売利益(300〜9,999,999)
              = link_to "#", class: "question-icon" do
                ?
            .sell-content__detail
              %ul.sell-content__price
                %li.form-group
                  %div.clearfix
                    %label.sell-content__label.l-left.price
                      価格
                      %span.form-require 必須
                    %div.l-right.sell-content__price--input
                      ¥
                      %div
                        = f.text_field :name, class: 'sell-content__price--input-form', placeholder: "例) 300"
                %li.clearfix
                  %div.l-left.normal 販売手数料(10%)
                  %di.l-right.normal -
                %li.clearfix.bold
                  %div.l-left 販売利益
                  %div.l-right -


          .sell-content.sell-content__btn
            %div.sell-content__btn--detail
              %p
                = link_to "#", class: "sell-content__btn--detail-link" do
                  禁止されている出品
                、
                = link_to "#", class: "sell-content__btn--detail-link" do
                  行為
                を必ずご確認ください。

              %p
                またブランド品でシリアルナンバー等がある場合はご記載ください。
                = link_to "#", class: "sell-content__btn--detail-link" do
                  偽ブランドの販売
                は犯罪であり処罰される可能性があります。
              %p
                また、出品をもちまして
                = link_to "#", class: "sell-content__btn--detail-link" do
                  加盟店規約
                に同意したことになります。

            = f.submit '出品する', class: "sell-content__btn--submit"
            = link_to "#", class: "sell-content__btn--back" do
              もどる

  = render "product-footer"
