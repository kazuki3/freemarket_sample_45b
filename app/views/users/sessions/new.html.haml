.register__container
  .register__container__header
    = image_tag "logo.svg", class:"campany-logo", alt:"メルカリロゴ"


  %main.register-main
    %section.register-main__container
      %h2.register-main__container--header 新規会員登録

      .register-inner
        .register-inner__content
          .actions
            .inline-icon-box
              = image_tag "mail.png", class:"minilogo"
            %a.mail-address-btn{:href => 'users/sign_up'}
              メールアドレスで登録

          .actions
            .inline-icon-box
              = image_tag "facebook.png", class:"minilogo"
            %a.facebook-btn{:href => 'users/auth/facebook/'}
              Facebookで登録

  %main.register-select-main
    %section.register-main__container
      %h2.register-main__header__login
        アカウントをお持ちでない方はこちら
        %a.sign-up-btn{:href => '/select'}
          新規会員登録

      .register-select-inner
        .register-inner__content
          .actions
            .inline-icon-box
              = image_tag "facebook.png", class:"minilogo"
            .facebook-btn
              = link_to "Facebookでログイン", user_facebook_omniauth_authorize_path

          .actions
            .inline-icon-box
              = image_tag "google.png", class:"minilogo"

            %a.google-btn{:href => 'users/auth/google_oauth2/'}
              Googleで登録

            .google-btn
              = link_to "Googleでログイン", user_google_oauth2_omniauth_authorize_path

          = form_with(model: resource, as: resource_name, url: user_session_path, locla: true) do |form|
            .register-inner__content
              .form-group
                = form.email_field :email, placeholder: "メールアドレス", class:"input-default"

              .form-group
                = form.password_field :password, :minlength => "6", placeholder: "パスワード", class:"input-default"

              .recaptcha
                = recaptcha_tags

              .actions
                = form.submit :ログイン, class:"register-member"

            .forget-pass
              パスワードをお忘れの方


  .register__container__footer
    = image_tag "logo-gray.svg", class:"campany-logo-gray", alt:"メルカリロゴgray"
